{% extends "layoutNotLogged.twig" %}

{% block content %}

<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 content-login">
        <h1 class="text-center login-title">Sistema TCC</h1>
		{% if erroDeLogin %}
		<div class="alert alert-danger"><i class="glyphicon glyphicon-remove-sign"></i> Seus dados n√£o conferem</div>
		{% endif %}
        <div class="account-wall">
            <form action="./login/" method="post" class="form-signin">
            <input type="text" name="_username" class="form-control" placeholder="CGU" required autofocus>
            <input type="password" name="_password" class="form-control" placeholder="Senha" required>
            <button class="btn btn-lg btn-primary btn-block" type="submit">
                Login</button>
            </form>
        </div>
    </div>
</div>

{% endblock %}
